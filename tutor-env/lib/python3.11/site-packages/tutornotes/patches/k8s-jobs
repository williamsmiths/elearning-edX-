---
apiVersion: batch/v1
kind: Job
metadata:
  name: notes-job
  labels:
    app.kubernetes.io/component: job
spec:
  template:
    spec:
      restartPolicy: Never
      containers:
        - name: notes
          image: {{ NOTES_DOCKER_IMAGE }}
          env:
            - name: DJANGO_SETTINGS_MODULE
              value: notesserver.settings.tutor
          volumeMounts:
            - mountPath: /app/edx-notes-api/notesserver/settings/tutor.py
              name: settings
              subPath: tutor.py
      volumes:
        - name: settings
          configMap:
            name: notes-settings
